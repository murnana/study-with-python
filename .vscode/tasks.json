{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make doc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "PATH": "${workspaceFolder}/.venv/Scripts"
                }
            },
            "type": "shell",
            "command": "paver create_docs",
            "promptOnClose": true,
            "problemMatcher": []
        },
        {
            "label": "Upgrade Workflow",
            "group": "none",
            "type": "shell",
            "command": "pipenv update",
            "promptOnClose": true,
            "problemMatcher": []
        }
    ]
}